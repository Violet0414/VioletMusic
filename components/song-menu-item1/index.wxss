/* components/song-menu-item1/index.wxss */

.item {
  width: 100%;
}

.top {
  width: 230rpx;
  height: 230rpx;
  overflow: hidden;
  border-radius: 30rpx;
}

.image {
  width: 230rpx;
  height: 230rpx;
}

.playNum {
  position: relative;
  font-size: 30rpx;
  text-align: right;
  padding-right: 10rpx;
  top: -50rpx;
  color: #fff;
}

.bottom {
  position: relative;
  overflow: hidden;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-line;
  
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}


