/* pages/music-player/index.wxss */
page {
  color: white;
}

.bgImg, .cover{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.cover {
  background-color: rgba(0,0,0,.5);
  backdrop-filter: blur(15px);
}

.img {
  position: absolute;
  top: 37%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.songMsg {
  display: flex;
  flex-direction:column;
  justify-content: center;
  align-items: flex-start;
  margin-top: 108%;
  margin-left: 42%;
  transform: translate(-50%, -50%);
}

.songMsg .title {
  font-size: 50rpx;
  margin-top: 20rpx;
}

.songMsg .artName, .mvName {
  font-size: 32rpx;
  color: #cecece;
  padding-top: 20rpx;
}

.time {
  display: flex;
  justify-content: space-between;
}

.current, .duration {
  margin: 10rpx;
}

.operation {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 50rpx;
}

.mbutton {
  height: 120rpx;
  width: 120rpx;
}

.button {
  height: 90rpx;
  width: 90rpx;
}




